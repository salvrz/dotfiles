/**
 * Main extensions:
 * 
 * ~~Visual Help~~
 *      Apophis Monolith Theme: Apophis Monolith - Onyx - Aquamarine
 *      // download IBM Plex Mono font family
 */
{
    "vim.handleKeys": {  // allow for keyboard copy-paste w/ vim extension
        "<C-c>": false,
        "<C-v>": false,
        "<C-x>": false
    },
    "editor.rulers": [74, 80],
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "code-runner.runInTerminal": true,
    "workbench.colorTheme": "Apophis Monolith - Onyx - Aquamarine",
    "files.autoSave": "off",
    "editor.fontFamily": "'IBM Plex Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontWeight": "400",
    "editor.fontLigatures": "'zero' 1",
    "editor.detectIndentation": false,
    "editor.tabSize": 8,
    "editor.insertSpaces": false,
    "editor.bracketPairColorization.enabled": true,//<<<<<
    "editor.guides.bracketPairs":"active",  //<<<<<
    "workbench.colorCustomizations": {
    "editorBracketMatch.background": "#5670889c", 
    "editorBracketMatch.border": "#567088", 
    "editorBracketHighlight.foreground1": "#00CDC1",
    "editorBracketHighlight.foreground2": "#E84C72",
    "editorBracketHighlight.foreground3": "#ffd753",
    "editorBracketHighlight.foreground4": "#00CDC1",
    "editorBracketHighlight.foreground5": "#E84C72",
    "editorBracketHighlight.foreground6": "#ffd753",
    "editorBracketHighlight.unexpectedBracket.foreground": "#c05558"
    },
    "editor.tokenColorCustomizations": {
      "textMateRules": [
        {
          "scope": [
            //following will be in italic (=FlottFlott)
            "comment",
            "string.quoted.docstring.multi.python", //Python docstrings
            "entity.name.type.class", //class names
            "keyword", //import, export, return…
            "constant", //String, Number, Boolean…, this, super
            "storage.modifier", //static keyword
            "storage.type.class.js", //class keyword
            "storage.type.function", //def
            "storage.type.class" //class
          ],
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": [
            //following will be excluded from italics (VSCode has some defaults for italics)
            "invalid",
            "keyword.operator",
            "constant.numeric.css",
            "keyword.other.unit.px.css",
            "constant.numeric.decimal.js",
            "constant.numeric.json"
          ],
          "settings": {
            "fontStyle": ""
          }
        },
        {
          "scope": [
            "storage.type.primitive.java",
            "storage.type.java",
            "entity.name.type.primitive.rust"
          ],
          "settings": {
            "foreground": "#E84C72",
          }
        }
      ]
    },
    "extensions.ignoreRecommendations": false,
    "workbench.editorAssociations": {
      "*.ipynb": "jupyter-notebook"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.languageServer": "Default",
    "files.exclude": {
      "**/.classpath": true,
      "**/.project": true,
      "**/.settings": true,
      "**/.factorypath": true
    },
    "editor.renderWhitespace": "all",
    "java.debug.settings.vmArgs": "--module-path /home/filecamp/usefull/javafx-sdk-11.0.2/lib --add-modules javafx.controls,javafx.fxml,javafx.media,javafx.web",
    "notebook.cellToolbarLocation": {
      "default": "right",
      "jupyter-notebook": "left"
    },
    "editor.largeFileOptimizations": false,
    "gitlens.codeLens.scopes": [
        "document",
        "containers",
        "blocks"
    ],
    "workbench.iconTheme": "material-icon-theme",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "window.zoomLevel": 1,
    "telemetry.telemetryLevel": "off"
    
}
